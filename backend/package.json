{
  "name": "aet-connect-backend",
  "version": "0.1.0",
  "description": "Backend API pour AET Connect - Annuaire panafricain des Anciens Enfants de Troupe",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "npm run test:e2e",
    "test:watch": "jest --watch",
    "test:e2e": "npm run test:e2e:registration && npm run test:e2e:auth && npm run test:e2e:events",
    "test:e2e:registration": "tsx tests/e2e/registration/invitation-logic.test.ts && tsx tests/e2e/registration/invitation-validation.test.ts && tsx tests/e2e/registration/edge-cases.test.ts && tsx tests/e2e/registration/roles.test.ts",
    "test:e2e:auth": "tsx tests/e2e/auth/authentication.test.ts",
    "test:e2e:events": "tsx tests/e2e/events/events-complete.test.ts",
    "test:e2e:events:advanced": "tsx tests/e2e/events/events-advanced.test.ts",
    "test:e2e:events:status": "tsx tests/e2e/events/events-status.test.ts",
    "test:e2e:events:all": "npm run test:e2e:events && npm run test:e2e:events:advanced",
    "test:e2e:events:complete": "npm run test:e2e:events && npm run test:e2e:events:advanced && npm run test:e2e:events:status",
    "test:e2e:admin": "tsx tests/e2e/admin/admin-complete.test.ts",
    "test:e2e:schools": "tsx tests/e2e/schools/schools-complete.test.ts",
    "test:e2e:users": "tsx tests/e2e/users/users-complete.test.ts",
    "test:e2e:v1": "npm run test:e2e:schools && npm run test:e2e:users",
    "test:e2e:complete": "tsx tests/e2e/complete/all-routes.test.ts",
    "db:add-events-fields": "tsx scripts/add-events-fields.ts",
    "test:integration": "echo 'No integration tests yet'",
    "test:unit": "echo 'No unit tests yet'",
    "test:get-data": "tsx scripts/get-real-test-data.ts",
    "report:registration": "tsx scripts/generate-test-report.ts",
    "report:auth": "tsx scripts/generate-auth-report.ts",
    "report:events": "tsx scripts/generate-events-report.ts",
    "report:admin": "tsx scripts/generate-admin-report.ts",
    "report:v1": "tsx scripts/generate-v1-report.ts",
    "docs:convert": "tsx scripts/generate-gitbook-from-reports.ts",
    "docs:install": "cd docs && gitbook install",
    "docs:build": "cd docs && gitbook build",
    "docs:serve": "cd docs && gitbook serve",
    "docs:all": "npm run docs:convert && npm run docs:build && npm run docs:serve",
    "admin:create-code": "tsx scripts/create-admin-universal-code.ts",
    "setup:test-users": "tsx scripts/setup-test-users.ts",
    "lint": "eslint src/**/*.ts",
    "db:setup": "tsx scripts/setup-db.ts",
    "db:test": "tsx scripts/test-connection.ts",
    "db:add-max-codes": "tsx scripts/add-max-codes-column.ts",
    "db:create-events": "tsx scripts/create-events-tables.ts",
    "db:add-user-privacy": "tsx scripts/add-user-privacy.ts"
  },
  "keywords": ["api", "backend", "aet", "alumni", "africa"],
  "author": "AET Connect Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "@supabase/supabase-js": "^2.39.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0"
  }
}

